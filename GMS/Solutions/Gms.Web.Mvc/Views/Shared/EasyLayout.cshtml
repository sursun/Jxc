
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type"/>

    <title>企业工作平台</title>
    <meta content="no-cache" http-equiv="pragma"/>
    <meta content="no-cache" http-equiv="cache-control"/>
    <meta content="0" http-equiv="expires"/>
    
    <link rel="stylesheet" type="text/css" href="@Url.Content("/Scripts/jquery-easyui-1.3.2/themes/default/easyui.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("/Scripts/jquery-easyui-1.3.2/themes/icon.css")"/>
    <link type="text/css" rel="stylesheet" href="@Url.Content("/Content/easylayout.css")"/>

    <script type="text/javascript" src="@Url.Content("/Scripts/jquery-1.7.2.js")"></script>    
    <script type="text/javascript" src="@Url.Content("/Scripts/jquery-easyui-1.3.2/jquery.easyui.min.js")"></script>

    <script type="text/javascript" src="@Url.Content("/Scripts/jquery-easyui-1.3.2/locale/easyui-lang-zh_CN.js")"></script>

</head>
    <body class="easyui-layout">
        
        
        <div data-options="region:'north'" style="height:80px;">
            
            <div class="wlbg">

                <div class="top">

                    <div class="t_menu">
                        <ul>
                            @RenderSection("Loginfo")
                        </ul>
                    </div>


                    <div class="t_name">
                        <h1>@RenderSection("CompanyName")</h1>
                    </div>
                </div>
            </div>
        </div>
@*        <div data-options="region:'south'" style="height:50px;">
            
        </div>*@
        <div data-options="region:'west',title:'功能菜单',split:true" style="width:150px;">
            @RenderSection("FunctionTree")
        </div>
        <div data-options="region:'center'" >
            @RenderBody()
        </div>

   
    </body>
</html>
